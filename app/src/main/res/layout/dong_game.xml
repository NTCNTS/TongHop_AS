<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageviewHinh"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textviewTen"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ten"
        android:layout_toRightOf="@+id/imageviewHinh"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:text="Mo Ta"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textviewTen"
        android:layout_toRightOf="@id/imageviewHinh"
        android:id="@+id/textviewMoTa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textviewGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewMoTa"
        android:layout_marginLeft="190dp"
        android:layout_toRightOf="@+id/imageviewHinh"
        android:text="Gia"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cong"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/imageviewHinh"
        android:padding="3dp"
        android:text="+"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tru"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/cong"
        android:layout_marginLeft="250dp"
        android:layout_toRightOf="@+id/imageviewHinh"
        android:text="-"
        android:padding="3dp"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="30dp"
        android:textStyle="bold" />

</RelativeLayout>